int sensor1Input = 0;
int sensor2Input = 1;
int potInput = 2;

int motorOutput1 = 3;
int motorOutput2 = 5;

int potValue;
int ledValue;
int blinkFrequncy;

int sensorThreshold;

int sensor1Value;
int sensor2Value;

int motor1ValueInitial=50;
int motor2ValueInitial=65;;
int motor1Value;
int motor2Value;

void setup()
{
  pinMode(motorOutput1, OUTPUT);
  pinMode(motorOutput2, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  sensor1Value=analogRead(sensor1Input);
  sensor2Value=analogRead(sensor2Input);
  potValue=analogRead(potInput);
  sensorThreshold=potValue;
  
  if((sensor1Value-sensorThreshold)>=10)
  {
    motor1Value=motor1ValueInitial+35;
  }
  else
  {
    motor1Value=motor1ValueInitial;
  }
  if((sensor2Value-sensorThreshold)>=10)
  {
    motor2Value=motor2ValueInitial+50;
  }
  else
  {
    motor2Value=motor2ValueInitial;
  }
  analogWrite(motorOutput2,motor2Value);
  analogWrite(motorOutput1,motor1Value);
  Serial.println(motor1Value);
}
  
